<div class="container">
  <div class="row">
    <div id="content" class="col-xs-8 col-xs-offset-2 col-md-6 col-md-offset-3 col-lg-4 col-lg-offset-4">
      <%= form_for @anime do |f| %>
        <div class="field">
          <%= f.text_field :title, :placeholder => 'Enter in a title', :size => 60%>
        </div>
      <% end %>
    </div><!-- #content -->
  </div><!--.row -->

  <div class="row">
    
    <div id="genres" class="table-responsive col-xs-12">
      <table class="table table-hover">
        <tbody>
          <% Genre.all.in_groups_of(5) do |arr| %>
          <tr> 
          <% arr.compact.each do |genre| %>
            <td><%= link_to genre.name, "/genres/#{genre.name}" %><%= "[#{genre.animes.count.to_s}]" %></td>
          <% end %>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div><!-- .table-responsive -->
        
  </div> <!-- .row -->
</div><!-- .container -->
