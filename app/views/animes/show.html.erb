<div class='animelist'>
<img src="<%= @anime.img_url %>" height="250" >
<h2><%= @anime.title %></h2>


<% if current_user %>
  <% if !(current_user.animes.include? Anime.find_by(:title => @anime.title)) %>
    <%= link_to 'Add to Watch List', "/add_to_watch_list/#{@anime.title}" %>
  <% else %>
    <%= "Already in your Watch List" %>
  <% end %>
<% else %>
   <%= link_to "Login to add to Watch List", "/auth/facebook"%>
 <% end %>

<h4>Description:</h4>
<h6><%= @anime.description %></h6>


<h4>Community Score: &nbsp; <%= "#{@anime.score.round(2)} out of 5" %></h4>


<h4>Genre:  &nbsp;
<% if @response %>
		<% @response.body["genres"].each do |genre| %>
  	<% genre = Genre.all.find_by(:name => genre['name']) %>
		<%= link_to genre.name, "/genres/#{genre.name}" %>   &nbsp;  &nbsp;
	<% end %>

<% else %>
		<% @anime.genres.each do |genre| %>
		<%= link_to genre.name, "/genres/#{genre.name}" %> &nbsp;  &nbsp; 
	<% end %>
	
<% end %>
